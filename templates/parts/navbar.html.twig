<div class="d-flex justify-content-evenly">
    <a class="btn" href="{{ path("app_home") }}">HOME</a>
    {% if app.user %}
        <a class="btn" href="{{ path("app_logout") }}">LOGOUT</a>
    {% else %}
        <a class="btn" href="{{ path("app_login") }}">LOGIN</a>
        <a class="btn" href="{{ path("app_register") }}">REGISTER</a>
    {% endif %}

    {%  if is_granted("ROLE_ADMIN") %}
    <a class="btn" href="{{  path("app_admin") }}">ADMIN</a>
    {% endif %}
</div>
